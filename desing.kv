<LoginScreen>:          
    name: "login"
    user: user
    key: key

    FloatLayout:
        cols: 1
        
        MDLabel:
            theme_text_color: "Custom"
            font_size: 40
            text: "STOLLkerr"
            halign: "center"
            pos_hint: {"y":0.43}
            font_name: 'Major_Mono_Display/MajorMonoDisplay-Regular.ttf'
            text_color: 0,0.2,0.5,1
        
        Image:
            source: 'stollker logo.png'
            size_hint: (0.35,0.35)
            pos_hint: {"center_x":0.5,"y":0.48}            
        
        FloatLayout:

            MDTextField:
                id: user                
                hint_text: "Insira seu usuario do Instagram"
                icon_right: "account"  
                size_hint: (0.5,0.09)
                pos_hint:{"center_x":0.5, "y":0.35}
            
            MDTextField:
                id: key
                hint_text: "Insira sua senha"
                icon_right: "key"
                size_hint: (0.5,0.09)
                pos_hint:{"center_x":0.5, "y":0.25}
                password: True
                

        MDRoundFlatIconButton:
            icon: "login"
            font_size: 22
            text: "Login"
            pos_hint:{"center_x":0.5, "y":0.1}
            on_release: root.Login()    

<InputScreen>:
    
    name:"input"
    hashtag: hashtag
    dia: dia
    qtd: qtd
    file_text: file_text

    FloatLayout:
        cols: 1
        
        Image:
            source: 'stollker logo.png'
            size_hint: (0.35,0.35)
            pos_hint: {"center_x":0.5,"y":0.63}            
        
        FloatLayout:

            MDTextField:
                id: hashtag                
                hint_text: "Insira a hashtag desejada"
                icon_right: "instagram"
                size_hint: (0.6,0.09)
                pos_hint:{"center_x":0.5, "y":0.53}
                required: True

            MDTextField:
                id: qtd
                input_filter: "int"
                icon_right: "post-outline"
                hint_text: "Insira quantidade de posts"
                size_hint: (0.6,0.09)
                pos_hint:{"center_x":0.5, "y":0.43} 

            MDRoundFlatIconButton:
                id: dia
                font_size: 20    
                text: "Insira a data da publicação"
                pos_hint:{"center_x":0.5, "y":0.32}
                icon:"calendar"                
                on_release: root.show_time_picker()
                required: True                  
                
            MDRoundFlatIconButton:
                id: file_text
                font_size: 20                
                text: "Escolha a imagem de fundo"
                icon:"folder"                
                pos_hint:{"center_x":0.5, "y":0.19}
                on_release: root.FileInput()
                required: True

        FloatLayout:

            MDRoundFlatIconButton:
                font_size: 20
                text: "Voltar"
                icon: "arrow-left-bold-circle-outline"
                pos_hint:{"center_x":0.4, "y":0.05}
                on_release: root.Back()
            MDRoundFlatIconButton:
                font_size: 20
                icon: "arrow-right-bold-circle-outline"
                text: "Avançar"
                pos_hint:{"center_x":0.6, "y":0.05}
                on_release: root.ImagesSelector()
   
<ImagesScreen>:
    name:"images"
    banner_photo:banner_photo
    on_enter: root.add_pictures()
    # carrousel:carrousel
    FloatLayout:
        cols: 1
        Image:
            id:banner_photo
            pos_hint:{"center_x":0.5,"y":0.22}
            size_hint:0.5,0.7
        MDCarousel:
            id: carrousel
            direction: "right"
            on_slide_complete:root.get_current_img()
