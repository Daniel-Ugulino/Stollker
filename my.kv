WindowManager:
    LoginScreen:
    MenuScreen:

<LoginScreen>:          
    name: "login"
    # user: user
    # key: key

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        cols: 1
        # size_hint:(0.8,0.8)
        # pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            font_style: "H4"
            text: "STOLLKER"
            halign: "center"
            pos_hint: {"y":0.43}  
        Image:
            source: 'stollker logo.png'
            size_hint: 0.35,0.35
            pos_hint: {"x":0.33,"y":0.48}            
        FloatLayout:

            MDTextField:
                hint_text: "Insira seu usuario do Insta"
                id: user
                size_hint: (0.4,0.09)
                pos_hint:{"x":0.32, "y":0.35}
                
            MDTextField:
                hint_text: "Insira sua senha"
                id: user
                size_hint: (0.4,0.09)
                pos_hint:{"x":0.32, "y":0.25}

        MDRoundFlatButton:
            font_size: 22
            text: "Login"
            size_hint: (0.4,0.09)
            pos_hint:{"x":0.32, "y":0.1}
            on_release: root.Login()    


